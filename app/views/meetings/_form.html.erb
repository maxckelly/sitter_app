<%= form_with(model: meeting, local: true) do |form| %>
  <% if meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul>
      <% meeting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <p> You're booking <%= @sitter.name %></p>
  </div>

  <div class="form-row">
    <div class="col">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", placeholder: "10 Smith St, Melbourne, Victoria" %>
    </div>

    <div class="col">
      <%= form.label :address %>
      <%= form.text_field :address, class: "form-control", placeholder: "10 Smith St, Melbourne, Victoria" %>
    </div>
  </div>

  <br>

  <div class="form-row">
    <div class="col">
      <%= form.label :start_time %>
      <%= form.datetime_select :start_time %>
    </div>

    <div class="col">
      <%= form.label :end_time %>
      <%= form.datetime_select :end_time %>
    </div>
  </div>

  <br>

  <div class="field">
    <%= form.hidden_field @sitter.name %>
    <%= form.hidden_field @sitter.description %> 
    <%= form.hidden_field :sitter_user_id, value: @sitter.id %>
    <%= form.hidden_field :parent_user_id, value: @parent.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>

