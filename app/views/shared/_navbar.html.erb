<% if user_signed_in? && current_user.role_id == 1 %>
  <nav class="navbar">
    <div class="links">
      <div>
      <% if  @current_user.picture != nil && @current_user.picture.attached? %>
        <%= image_tag @current_user.picture, class: "profile-image" %>
      <% elsif %>
        <%= image_tag "default_profile_image.png", class: "profile-image" %>
      <% end %>
      </div>
      <!-- Links -->
      <%= link_to "Home", parents_home_path(), class: "navbar-link" %>
      <%= link_to "All bookings", meetings_path(), class: "navbar-link" %>
      <%= link_to "View Sitters", parents_sitter_display_path(), class: "navbar-link" %>

      <!-- The below if statement basically says if the parent id is nil then display nothing. But if its not nil display view profile. This was to prevent the app from crashing when creating the parent. -->
      <% if @current_user.parent == nil %>
        <%= link_to "Create Parent Profile", parents_new_path(), class: "navbar-link" %>
      <% elsif %>
        <%= link_to "View profile", parent_path(@current_user), class: "navbar-link" %>
      <% end %>

      <% if user_signed_in? %>
        <%= link_to "logout", destroy_user_session_path, method: :delete, class: "navbar-link"%></p>
      <% else %>
        <%= link_to "login", new_user_session_path, class: "navbar-link"%>
      <% end %>
    </div>
  </nav>
  <% elsif user_signed_in? && current_user.role_id == 2 %>
    <nav class="navbar">
      <div class="links">
        <div class="profile-image-container">
          <% if @current_user.picture.attached? %>
            <%= image_tag @current_user.picture, class: "profile-image" %>
          <% else %>
            <%= image_tag "default_profile_image.png", class: "profile-image" %>
          <% end %>
        </div>
        <%= link_to "Home", sitters_home_path(), class: "navbar-link" %>
        <%= link_to "All bookings", meetings_path(), class: "navbar-link" %>
        
        <% if current_user.sitter == nil %>
          <%= link_to "Create Sitter", new_sitter_path(), class: "navbar-link" %>
        <% elsif %>
          <%= link_to "View profile", sitter_path(@sitter), class: "navbar-link" %>
        <% end %>

        <% if user_signed_in? %>
          <%= link_to "logout", destroy_user_session_path, method: :delete, class: "navbar-link"%></p>
        <% else %>
          <%= link_to "login", new_user_session_path, class: "navbar-link"%>
        <% end %>
      </div>
    </nav>
  <% elsif !user_signed_in? %>
    <nav class="navbar">
      <div class="links">
        <div class="profile-image-container">
          <%= image_tag 'default_profile_image.png', class: "profile-image"%>
        </div>
        <%= link_to "Home", root_path(), class: "navbar-link" %>
        <% if user_signed_in? %>
          <%= link_to "logout", destroy_user_session_path, method: :delete, class: "navbar-link"%></p>
        <% else %>
          <%= link_to "login", new_user_session_path, class: "navbar-link"%>
        <% end %>
      </div>
    </nav>
<% end %>


